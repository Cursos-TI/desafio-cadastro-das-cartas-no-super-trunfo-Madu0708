#include <stdio.h>

int main() {
    // Declaração das variáveis para armazenar os dados da Carta 1
    char estado1; // Estado da cidade (A a H)
    char codigo1[4]; // Código da carta (ex: A01)
    char nomeCidade1[100]; // Nome da cidade
    int populacao1; // População da cidade
    float area1; // Área da cidade (em km²)
    float pib1; // PIB da cidade (em bilhões de reais)
    int pontosTuristicos1; // Número de pontos turísticos da cidade

    // Declaração das variáveis para armazenar os dados da Carta 2
    char estado2;
    char codigo2[4];
    char nomeCidade2[100];
    int populacao2;
    float area2;
    float pib2;
    int pontosTuristicos2;

    // Leitura dos dados da Carta 1
    printf("Digite os dados da Carta 1:\n");

    printf("Estado (A a H): ");
    scanf(" %c", &estado1); // Lê o estado da cidade (um caractere)

    printf("Código da Carta (ex: A01): ");
    scanf("%s", codigo1); // Lê o código da carta (uma string)

    printf("Nome da Cidade: ");
    scanf(" %[^\n]s", nomeCidade1); // Lê o nome da cidade (uma string com espaços)

    printf("População: ");
    scanf("%d", &populacao1); // Lê a população da cidade (um inteiro)

    printf("Área (em km²): ");
    scanf("%f", &area1); // Lê a área da cidade (um float)

    printf("PIB (em bilhões de reais): ");
    scanf("%f", &pib1); // Lê o PIB da cidade (um float)

    printf("Número de Pontos Turísticos: ");
    scanf("%d", &pontosTuristicos1); // Lê o número de pontos turísticos (um inteiro)

    printf("\n"); // Imprime uma linha em branco para separar as cartas

    // Leitura dos dados da Carta 2 (similar à Carta 1)
    printf("Digite os dados da Carta 2:\n");

    printf("Estado (A a H): ");
    scanf(" %c", &estado2);

    printf("Código da Carta (ex: B02): ");
    scanf("%s", codigo2);

    printf("Nome da Cidade: ");
    scanf(" %[^\n]s", nomeCidade2);

    printf("População: ");
    scanf("%d", &populacao2);

    printf("Área (em km²): ");
    scanf("%f", &area2);

    printf("PIB (em bilhões de reais): ");
    scanf("%f", &pib2);

    printf("Número de Pontos Turísticos: ");
    scanf("%d", &pontosTuristicos2);

    printf("\n");

    // Exibição dos dados da Carta 1
    printf("Carta 1:\n");

    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", nomeCidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1); // Exibe a área com duas casas decimais
    printf("PIB: %.2f bilhões de reais\n", pib1); // Exibe o PIB com duas casas decimais
    printf("Número de Pontos Turísticos: %d\n", pontosTuristicos1);

    printf("\n");

    // Exibição dos dados da Carta 2 (similar à Carta 1)
    printf("Carta 2:\n");

    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", nomeCidade2);
    printf("População: %d\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de Pontos Turísticos: %d\n", pontosTuristicos2);

    return 0; // Indica que o programa foi executado com sucesso
}